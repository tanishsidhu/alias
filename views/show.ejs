<html>
<head>
    <title>alias | Post</title>
    <meta name=viewport content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/common.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Baloo+Thambi">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarContent">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a href="/posts" class="navbar-brand"><i class="fas fa-rss-square"></i> Feed</a>      
        </div>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="nav navbar-nav navbar-right">
              <p class="navbar-brand"><i class="fas fa-user"></i> Signed in as <span style="color: green;">@<%=user.alias%></span></p>
              <a href="/newpost" class="navbar-brand"><i class="fas fa-pen-alt"></i> New Post</a>
              <a href="/logout" class="navbar-brand"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=post.image%>">
                <hr style="border: 1px solid tomato;">
                <div class="caption">
                    <h4><b> <%= post.title %> </b></h4>
                    <p><%- post.body %> </p>
                    <br>
                    <p><em>Posted by <span style="color: green;">@<%=post.author.alias%></span> on <span style="color: tomato;"><%= post.created %></span></em></p>
                </div>
            </div>
            <div class="well">
              <h4><b>Comments:</b></h4>
                <div class="">
                  <% post.comments.forEach(function(comment){ %>
                  <p> <span style="color: green;">@<%=comment.author.alias%></span> : <%-comment.text%> </p>
                  <% }) %>
                </div>
                  <hr style="border:2px solid black;">
                  <a href="/posts/<%=post._id%>/comments/new" class="btn btn-success">Comment</a>
                  <% if(String(post.author.id) == String(user._id)){ %>
                  <div class="pull-right">
                    <a href="/posts/<%=post._id%>/edit" class="btn btn-warning">Edit Post</a>
                    <form style="display:inline;" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                      <button class="btn btn-danger" style="font-family: 'Baloo Thambi', cursive;">Delete</button>
                    </form>
                  </div>
                  <% } %>
            </div>
        </div>
    </div>
</div>

<footer>
    <div class="container">
        <small>Copyright Â© 2019 alias. All rights reserved.</small>
    </div>
</footer>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
